{
  "name": "rechunk",
  "version": "0.1.3",
  "private": true,
  "description": "ðŸš€ Securely load and execute remote React Native components and functions over-the-air",
  "keywords": [
    "react-native",
    "remote-components",
    "dynamic-rendering",
    "secure-components",
    "code-splitting",
    "server-driven-ui",
    "sdui",
    "typescript",
    "remote-modules",
    "hosted-components",
    "ota",
    "over-the-air"
  ],
  "homepage": "https://rechunk.xyz",
  "repository": "git@github.com:crherman7/rechunk.git",
  "license": "MIT",
  "author": "Chris Herman <crherman7@gmail.com>",
  "files": [
    "android",
    "dist",
    "ios",
    "plugin",
    "rechunk.podspec"
  ],
  "scripts": {
    "build": "pnpm --filter '@repo/*' --filter '@rechunk/*' recursive run --sort build",
    "prepare": "husky",
    "release": "release-it --ci",
    "release:dry-run": "pnpm release --dry-run",
    "release:major": "pnpm release --increment major",
    "release:minor": "pnpm release --increment minor",
    "release:patch": "pnpm release --increment patch",
    "release:pre-release": "pnpm release --preRelease=rc",
    "postrelease": "pnpm --filter '@rechunk/*' recursive exec pnpm publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "husky": "^9.0.11",
    "release-it": "^17.6.0",
    "tsup": "8.0.2"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.14.0"
  },
  "pnpm": {
    "overrides": {
      "@pagefind/default-ui@<1.1.1": ">=1.1.1",
      "astro@>=3.0.0 <=4.16.17": ">=4.16.18 <5.x",
      "cookie@<0.7.0": ">=0.7.0",
      "cross-spawn@>=7.0.0 <7.0.5": ">=7.0.5",
      "cross-spawn@<6.0.6": ">=6.0.6",
      "dset@<3.1.4": ">=3.1.4 <4.x",
      "eslint-plugin-prettier@<5.2.1": ">=5.2.1",
      "fast-xml-parser@<4.4.1": ">=4.4.1",
      "hono@<4.5.8": ">=4.5.8",
      "micromatch@<4.0.8": ">=4.0.8",
      "nanoid@<3.3.8": ">=3.3.8 <4.x",
      "node-fetch@<2.6.7": ">=2.6.7 <3.x",
      "pagefind@<1.1.1": ">=1.1.1",
      "path-to-regexp@>=0.2.0 <8.0.0": ">=8.0.0",
      "path-to-regexp@<0.1.12": "0.1.12",
      "rollup@>=4.0.0 <4.22.4": ">=4.22.4 <5.x",
      "semver@>=7.0.0 <7.5.2": ">=7.5.2",
      "send@<0.19.0": ">=0.19.0",
      "serve-static@<1.16.0": ">=1.16.0",
      "vite@>=5.2.0 <5.2.14": ">=5.2.14 <6.x"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "packages/api-client",
          "packages/babel-plugin",
          "packages/cli",
          "packages/core",
          "packages/metro-config",
          "packages/rollup-preset",
          "packages/utils"
        ],
        "publish": false
      }
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "requireBranch": "develop",
      "requireCleanWorkingDir": false,
      "tagName": "v${version}"
    },
    "github": {
      "releaseName": "Release ${name} v${version}",
      "release": true
    },
    "npm": false
  }
}
