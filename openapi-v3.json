{
  "openapi": "3.1.0",
  "info": {
    "title": "ReChunk API",
    "version": "1.0.0",
    "description": "API for managing chunks in the ReChunk project."
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "Main API server"
    }
  ],
  "paths": {
    "/projects/{projectId}": {
      "post": {
        "summary": "Create a new project.",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the project."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created a new project.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Project"
                }
              }
            }
          },
          "400": {
            "description": "Cannot create project."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      },
      "get": {
        "summary": "Get project details.",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the project."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved project details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Project"
                }
              }
            }
          },
          "404": {
            "description": "Project not found."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      }
    },
    "/projects/{projectId}/chunks": {
      "get": {
        "summary": "Get details of all chunks in the project.",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the project."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved all chunks and details.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Chunk"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Project not found."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      }
    },
    "/projects/{projectId}/chunks/{chunkId}": {
      "post": {
        "summary": "Create a chunk in the project.",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the project."
          },
          {
            "name": "chunkId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the chunk."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully updated the chunk.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Project or chunk not found."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      },
      "get": {
        "summary": "Get details of a chunk in the project.",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the project."
          },
          {
            "name": "chunkId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the chunk."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved the chunk details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Chunk"
                }
              }
            }
          },
          "404": {
            "description": "Project or chunk not found."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Delete a chunk from the project.",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the project."
          },
          {
            "name": "chunkId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier for the chunk."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deleted the chunk.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Project or chunk not found."
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Chunk": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        }
      },
      "Project": {
        "type": "object",
        "properties": {
          "$schema": {
            "type": "string"
          },
          "project": {
            "type": "string"
          },
          "readKey": {
            "type": "string"
          },
          "writeKey": {
            "type": "string"
          },
          "publicKey": {
            "type": "string"
          },
          "privateKey": {
            "type": "string"
          },
          "host": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
