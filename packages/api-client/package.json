{
  "name": "@rechunk/api-client",
  "version": "0.1.0",
  "description": "TypeScript API client for ReChunk services with OpenAPI-generated interfaces",
  "keywords": [
    "rechunk",
    "api-client",
    "openapi",
    "typescript",
    "fetch",
    "rest-api",
    "code-splitting"
  ],
  "license": "MIT",
  "author": "Chris Herman",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "generate": "openapi-generator-cli generate -i ./openapi-v3.json -g typescript-fetch -o ./src"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.5",
    "@repo/typescript-config": "workspace:*",
    "typescript": "^5.4.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
